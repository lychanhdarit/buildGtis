<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - G</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/gis.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />

    <link rel="shortcut icon" href="~/Content/icon/icon.png">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-x">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="~/" style="
                   text-decoration: none;
                   display: block;
                   height: 50px;
                   padding-left: 10px;
                   padding-right: 10px;">
                    <img src="~/Content/logo.png" style="height: 35px; margin-top: 5px;" />
                </a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/" style="color: #ebf912;
    font-weight: bold;
    padding: 5px;">HỆ THỐNG<br/> CẢNH BÁO CHÁY NHANH</a>
                    </li>
                    @if (@ViewBag.User != null)
                    {

                        <li>
                            <a href="/"><i class="fa fa-television" aria-hidden="true"></i> Giám sát</a>
                        </li>

                        <li>
                            <a href="../History/Index"><i class="fa fa-history" aria-hidden="true"></i> Lịch sử</a>
                        </li>
                        <li>
                            <a href="~/AccountPolice/Index"><i class="fa fa-address-book-o" aria-hidden="true"></i> Tài khoản</a>
                        </li>
                        @*<li>
                    <a href="~/Transport/Index"><i class="fa fa-microchip" aria-hidden="true"></i> Phương tiện</a>
                </li>*@
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="/"><i class="fa fa-id-card-o" aria-hidden="true"></i> @ViewBag.User <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>

                                    <a href="../Account/Login"><i class="fa fa-sign-out" aria-hidden="true"></i> Thoát</a>

                                </li>
                            </ul>
                        </li>

                    }
                </ul>


            </div>
            <div style="position:fixed;right:0px;top:0px;">
                <a href="/" style="text-decoration: none;
                   display: block;
                   height: 50px;
                   padding-left: 10px;
                   padding-right:10px;float:left">
                    <img src="~/Content/head-logo.png" style="height: 45px; margin-top: 3px;" />
                </a>
                <a href="/" style="color: #ebf912; font-weight: bold; padding: 5px;float:left">CẢNH SÁT PCCC<br />ĐỒNG NAI</a>
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()

    </div>
    <div id="preloader">
        <img src="~/Content/loading.gif" style="max-width:200px" />
    </div>
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)*@
</body>
</html>
